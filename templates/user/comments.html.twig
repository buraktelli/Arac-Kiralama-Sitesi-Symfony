{% extends 'homebase.html.twig' %}

{% block title %} {{ app.user.name }} Comments {% endblock %}


{% block body %}
    <section id="subintro">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="centered">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb notop">
                        <li><a href="#">Home</a><span class="divider">/</span></li>
                        <li class="active">User Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section id="maincontent">
        <div class="container">
            <div class="row">

                {{ include ('user/usermenu.html.twig') }}

                <div class="span7">
                    <!-- start article 1 -->
                    <article class="blog-post">
                        <div class="post-heading">
                            <h3><a href="#">User Comments</a></h3>
                        </div>
                        <div class="row">
                            <div class="span8">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Comment</th>
                                        <th>Status</th>
                                        <th>Car</th>
                                        <th>Created_at</th>
                                        <th>Rate</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for comment in comments %}

                                        <td>{{ comment.subject }}</td>
                                        <td>{{ comment.comment }}</td>
                                        <td>{{ comment.status }}</td>
                                        <td>
                                            <a href="{{ path('car_show', {'id': comment.carid}) }}">{{ comment.title }}</a>
                                        </td>
                                        <td>{{ comment.created_at}}</td>
                                        <td>{{ comment.rate }}</td>
                                        <td>
                                            <a href="" class="btn btn-danger">Delete</a>
                                        </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
