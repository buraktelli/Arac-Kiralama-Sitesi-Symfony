{% extends 'homebase.html.twig' %}

{% block title %} Reservation show {% endblock %}


{% block body %}
    <section id="subintro">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="centered">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb notop">
                        <li><a href="#">Home</a><span class="divider">/</span></li>
                        <li class="active">Reservation Show</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section id="maincontent">
        <div class="container">
            <div class="row">

                {{ include ('user/usermenu.html.twig') }}

                <div class="span7">
                    <!-- start article 1 -->
                    <article class="blog-post">
                        <div class="post-heading">
                            <h3><a href="#">Reservation</a></h3>
                        </div>
                        <div class="row">
                            <div class="span8">

                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Car</th><td>
                                            <a href="{{ path("car_show",{"id":reservation[0].carid}) }}">
                                                {{ reservation[0].cname }}
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Model</th><td>{{ reservation[0].cmodel }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th><td>{{ reservation[0].name }} {{ reservation[0].surname }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th><td>{{ reservation[0].email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Phone</th><td>{{ reservation[0].phone }}</td>
                                    </tr>
                                    <tr>
                                        <th>Checkin</th><td>{{ reservation[0].checkin|date('d-m-Y')}}</td>
                                    </tr>
                                    <tr>
                                        <th>Checkout</th><td>{{ reservation[0].checkout|date('d-m-Y')}}</td>
                                    </tr>
                                    <tr>
                                        <th>Days</th><td>{{ reservation[0].days }}</td>
                                    </tr>
                                    <tr>
                                        <th>Total Price</th><td>{{ reservation[0].total }}</td>
                                    </tr>
                                    <tr>
                                        <th>Message</th><td>{{ reservation[0].message }}</td>
                                    </tr>
                                    <tr>
                                        <th>Note</th><td>{{ reservation[0].note }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th><td>{{ reservation[0].status }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date</th><td>{{ reservation[0].created_at }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
